    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>
    <script>
        let map;
        let currentMarkers = [];
        let currentHotels = [];
        let allHotelsData = [];
        let currentlyShowing = 5;
        const BACKEND_URL = 'https://actionly.onrender.com';

        // GDPR Cookie Management
        let cookieConsent = {
            analytics: false,
            performance: false,
            essential: true
        };

        // Room type descriptions for UI feedback
        const roomTypeDescriptions = {
            'single': 'Perfect for solo travelers - Ready to search!',
            'double': 'Ideal for couples - Ready to search!',
            'family': 'Spacious accommodation for families - Ready to search!',
            'junior_suite': 'Spacious room with sitting area - Ready to search!',
            'suite': 'Luxury accommodation with separate living area - Ready to search!'
        };

        // Cookie Management Functions
        function checkCookieConsent() {
            const consent = localStorage.getItem('stayfindr_cookie_consent');
            if (!consent) {
                setTimeout(() => {
                    document.getElementById('cookieBanner').classList.add('show');
                }, 2000);
            } else {
                cookieConsent = JSON.parse(consent);
                initializeAnalytics();
            }
        }

        function acceptCookies() {
            cookieConsent = {
                analytics: true,
                performance: true,
                essential: true
            };
            saveCookieConsent();
            hideCookieBanner();
            initializeAnalytics();
        }

        function declineCookies() {
            cookieConsent = {
                analytics: false,
                performance: false,
                essential: true
            };
            saveCookieConsent();
            hideCookieBanner();
        }

        function showCookieSettings() {
            document.getElementById('cookieModal').classList.add('show');
            document.getElementById('analyticsToggle').checked = cookieConsent.analytics;
            document.getElementById('performanceToggle').checked = cookieConsent.performance;
        }

        function hideCookieSettings() {
            document.getElementById('cookieModal').classList.remove('show');
        }

        function saveCookieSettings() {
            cookieConsent.analytics = document.getElementById('analyticsToggle').checked;
            cookieConsent.performance = document.getElementById('performanceToggle').checked;
            saveCookieConsent();
            hideCookieSettings();
            hideCookieBanner();
            
            if (cookieConsent.analytics) {
                initializeAnalytics();
            }
        }

        function saveCookieConsent() {
            localStorage.setItem('stayfindr_cookie_consent', JSON.stringify(cookieConsent));
            localStorage.setItem('stayfindr_consent_date', new Date().toISOString());
        }

        function hideCookieBanner() {
            document.getElementById('cookieBanner').classList.remove('show');
        }

        function initializeAnalytics() {
            if (!cookieConsent.analytics) {
                console.log('üìä Analytics disabled by user preference');
                return;
            }
            
            console.log('üìä Analytics enabled - tracking user interactions');
            
            // Initialize session tracking
            if (!sessionStorage.getItem('stayfindr_session_id')) {
                const sessionId = 'session_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
                sessionStorage.setItem('stayfindr_session_id', sessionId);
            }

            // Track page view
            trackEvent('page_view', {
                url: window.location.href,
                timestamp: new Date().toISOString(),
                user_agent: navigator.userAgent,
                screen_resolution: `${screen.width}x${screen.height}`
            });
        }

        function trackEvent(eventType, data) {
            if (!cookieConsent.analytics) {
                return;
            }

            const eventData = {
                event_type: eventType,
                session_id: sessionStorage.getItem('stayfindr_session_id'),
                timestamp: new Date().toISOString(),
                url: window.location.href,
                ...data
            };

            // Send to backend analytics endpoint
            try {
                fetch(`${BACKEND_URL}/api/analytics/track-event`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(eventData)
                }).catch(error => {
                    console.log('Analytics tracking failed (offline):', error);
                });
            } catch (error) {
                console.log('Analytics tracking error:', error);
            }
        }

        // Wait for Leaflet to load properly with retry mechanism
        function waitForLeaflet() {
            return new Promise((resolve) => {
                let attempts = 0;
                const maxAttempts = 30; // 15 seconds max wait
                
                function checkLeaflet() {
                    attempts++;
                    if (typeof L !== 'undefined' && L.map) {
                        console.log('‚úÖ Leaflet loaded successfully');
                        resolve();
                    } else if (attempts >= maxAttempts) {
                        console.log('‚ùå Leaflet failed to load after 15 seconds, proceeding without map');
                        resolve();
                    } else {
                        console.log(`‚è≥ Waiting for Leaflet... (${attempts}/${maxAttempts})`);
                        setTimeout(checkLeaflet, 500);
                    }
                }
                checkLeaflet();
            });
        }

        // Alternative: Load Leaflet dynamically if not available
        function loadLeafletDynamically() {
            return new Promise((resolve) => {
                if (typeof L !== 'undefined') {
                    resolve();
                    return;
                }

                const cssLink = document.createElement('link');
                cssLink.rel = 'stylesheet';
                cssLink.href = 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.css';
                document.head.appendChild(cssLink);

                const script = document.createElement('script');
                script.src = 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.js';
                script.onload = () => {
                    console.log('‚úÖ Leaflet loaded dynamically from CDNJS');
                    setTimeout(resolve, 100); // Small delay to ensure full load
                };
                script.onerror = () => {
                    console.log('‚ùå Failed to load Leaflet from CDNJS');
                    resolve();
                };
                document.head.appendChild(script);
            });
        }

        // Initialize the application
        function initializeApp() {
            console.log('üöÄ Initializing STAYFINDR with GDPR-compliant analytics...');
            
            testBackendConnection();
            initMap();
            setupEventListeners();
            setDefaultDates();
            checkCookieConsent();
            
            console.log('‚úÖ STAYFINDR initialized successfully');
        }

        async function testBackendConnection() {
            try {
                const response = await fetch(`${BACKEND_URL}/api/cities`);
                if (response.ok) {
                    const data = await response.json();
                    document.getElementById('connectionStatus').innerHTML = `‚úÖ Backend ready! ${data.total} cities available`;
                    document.getElementById('connectionStatus').className = 'status success-indicator';
                } else {
                    throw new Error('Backend not responding');
                }
            } catch (error) {
                document.getElementById('connectionStatus').innerHTML = '‚ùå Backend connection failed. <button class="retry-btn" onclick="testBackendConnection()">üîÑ Try Again</button>';
                document.getElementById('connectionStatus').className = 'status error';
            }
        }

        function initMap() {
            try {
                if (typeof L !== 'undefined' && L.map) {
                    map = L.map('map').setView([59.3293, 18.0686], 6);
                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '¬© OpenStreetMap contributors',
                        maxZoom: 18
                    }).addTo(map);
                    console.log('üó∫Ô∏è OpenStreetMap initialized successfully');
                    document.getElementById('map').style.background = 'none';
                } else {
                    console.log('‚ö†Ô∏è Leaflet not available, using fallback');
                    document.getElementById('map').innerHTML = `
                        <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100%; color: #666;">
                            <div style="font-size: 2rem; margin-bottom: 10px;">üó∫Ô∏è</div>
                            <div>Interactive map will appear when you search</div>
                            <button onclick="retryMapLoad()" style="margin-top: 10px; padding: 8px 16px; background: #3498db; color: white; border: none; border-radius: 5px; cursor: pointer;">
                                üîÑ Retry Map Loading
                            </button>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Map initialization failed:', error);
                document.getElementById('map').innerHTML = `
                    <div style="text-align: center; padding: 20px; color: #666;">
                        ‚ùå Map temporarily unavailable<br>
                        <small>Search functionality works perfectly!</small>
                    </div>
                `;
            }
        }

        async function retryMapLoad() {
            console.log('üîÑ Retrying map load...');
            document.getElementById('map').innerHTML = '<div style="text-align: center; padding: 50px; color: #666;">‚è≥ Loading map...</div>';
            
            await loadLeafletDynamically();
            await waitForLeaflet();
            initMap();
        }

        function setupEventListeners() {
            const searchForm = document.getElementById('searchForm');
            if (searchForm) {
                searchForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    searchHotels();
                });
                console.log('üìã Form event listeners setup');
            }

            const loadMoreBtn = document.getElementById('loadMoreBtn');
            if (loadMoreBtn) {
                loadMoreBtn.addEventListener('click', function() {
                    showMoreHotels();
                });
            }

            // Room type change handler with smart guest updating
            const roomTypeSelect = document.getElementById('roomType');
            const guestsSelect = document.getElementById('guests');
            const roomTypeHint = document.getElementById('roomTypeHint');

            if (roomTypeSelect && guestsSelect && roomTypeHint) {
                roomTypeSelect.addEventListener('change', function() {
                    const roomType = this.value;
                    
                    // Track room type selection
                    trackEvent('room_type_change', {
                        room_type: roomType,
                        previous_guests: guestsSelect.value
                    });
                    
                    // Update guests automatically based on room type
                    switch(roomType) {
                        case 'single':
                            guestsSelect.value = '1';
                            break;
                        case 'double':
                            guestsSelect.value = '2';
                            break;
                        case 'family':
                            guestsSelect.value = '4';
                            break;
                        case 'junior_suite':
                            guestsSelect.value = '2';
                            break;
                        case 'suite':
                            guestsSelect.value = '3';
                            break;
                    }
                    
                    // Update hint text
                    roomTypeHint.textContent = roomTypeDescriptions[roomType] || 'Ready to search!';
                });
            }
        }

        function setDefaultDates() {
            const today = new Date();
            const tomorrow = new Date(today.getTime() + 24 * 60 * 60 * 1000);
            
            document.getElementById('checkin').value = today.toISOString().split('T')[0];
            document.getElementById('checkout').value = tomorrow.toISOString().split('T')[0];
        }

        async function searchHotels() {
            const city = document.getElementById('city').value;
            const roomType = document.getElementById('roomType').value;
            const checkin = document.getElementById('checkin').value;
            const checkout = document.getElementById('checkout').value;
            const guests = document.getElementById('guests').value;

            console.log(`üîç Searching hotels: ${city}, ${roomType}, ${checkin} to ${checkout}, ${guests} guests`);

            // Track search event for analytics
            trackEvent('hotel_search', {
                city: city,
                room_type: roomType,
                checkin: checkin,
                checkout: checkout,
                guests: guests,
                nights: Math.ceil((new Date(checkout) - new Date(checkin)) / (1000 * 60 * 60 * 24))
            });

            const searchButton = document.getElementById('searchButton');
            const hotelsList = document.getElementById('hotelsList');
            const hotelsTitle = document.getElementById('hotelsTitle');

            searchButton.disabled = true;
            searchButton.innerHTML = '‚è≥ Searching...';
            hotelsList.innerHTML = '<div class="loading">üîç Searching real hotels with accurate stay pricing...</div>';
            hotelsTitle.innerHTML = `Hotels in ${city}`;

            try {
                const response = await fetch(`${BACKEND_URL}/api/hotels?city=${city}&room_type=${roomType}&checkin=${checkin}&checkout=${checkout}&adults=${guests}&rooms=1`);
                
                if (!response.ok) {
                    throw new Error(`API error: ${response.status}`);
                }

                const data = await response.json();

                if (data.error) {
                    throw new Error(data.error);
                }

                if (data.hotels && data.hotels.length > 0) {
                    allHotelsData = data.hotels;
                    currentlyShowing = 5;
                    
                    displayHotels(data.hotels.slice(0, 5), data.city, data.pricing);
                    updateMap(data.hotels.slice(0, 5));
                    
                    const loadMoreContainer = document.getElementById('loadMoreContainer');
                    if (data.hotels.length > 5) {
                        loadMoreContainer.style.display = 'block';
                        updateLoadMoreButton();
                    } else {
                        loadMoreContainer.style.display = 'none';
                    }
                    
                    const nights = data.search_params.nights || 1;
                    document.getElementById('connectionStatus').innerHTML = 
                        `‚úÖ Found ${data.total_found} hotels in ${data.city}! Showing total cost for ${nights} nights (${Math.min(5, data.hotels.length)} displayed)`;
                    document.getElementById('connectionStatus').className = 'status success-indicator';

                    // Track successful search
                    trackEvent('search_results', {
                        city: city,
                        hotels_found: data.total_found,
                        hotels_displayed: Math.min(5, data.hotels.length),
                        nights: nights
                    });
                } else {
                    hotelsList.innerHTML = '<div class="error">No hotels found for this city and dates.</div>';
                    document.getElementById('loadMoreContainer').style.display = 'none';
                    
                    // Track empty search
                    trackEvent('search_no_results', {
                        city: city,
                        room_type: roomType,
                        checkin: checkin,
                        checkout: checkout
                    });
                }

            } catch (error) {
                console.error('Search error:', error);
                hotelsList.innerHTML = `<div class="error">Error: ${error.message}</div>`;
                
                document.getElementById('connectionStatus').innerHTML = '‚ùå Search failed - Check backend connection';
                document.getElementById('connectionStatus').className = 'status error';

                // Track search error
                trackEvent('search_error', {
                    city: city,
                    error_message: error.message
                });
            }

            searchButton.disabled = false;
            searchButton.innerHTML = 'üîç Search Hotels';
        }

        function showMoreHotels() {
            const nextBatch = Math.min(currentlyShowing + 5, allHotelsData.length);
            const hotelsToShow = allHotelsData.slice(0, nextBatch);
            
            currentlyShowing = nextBatch;
            
            displayHotels(hotelsToShow, '');
            updateMap(hotelsToShow);
            updateLoadMoreButton();
            
            document.getElementById('connectionStatus').innerHTML = 
                `‚úÖ Showing ${currentlyShowing} of ${allHotelsData.length} hotels`;

            // Track load more action
            trackEvent('load_more_hotels', {
                previous_count: currentlyShowing - 5,
                new_count: currentlyShowing,
                total_available: allHotelsData.length
            });
        }

        function updateLoadMoreButton() {
            const loadMoreBtn = document.getElementById('loadMoreBtn');
            const loadMoreContainer = document.getElementById('loadMoreContainer');
            
            if (currentlyShowing >= allHotelsData.length) {
                loadMoreContainer.style.display = 'none';
            } else {
                const remaining = allHotelsData.length - currentlyShowing;
                loadMoreBtn.innerHTML = `üìã Show ${Math.min(5, remaining)} More Hotels (${remaining} remaining)`;
            }
        }

        function displayHotels(hotels, cityName, pricingInfo) {
            currentHotels = hotels;
            const hotelsList = document.getElementById('hotelsList');

            let html = '';
            hotels.forEach((hotel, index) => {
                const priceDisplay = hotel.price !== 'N/A' ? `‚Ç¨${hotel.price}/stay` : 'Price on request';
                const stars = '‚≠ê'.repeat(Math.floor(hotel.rating));
                const nights = hotel.nights || 1;

                html += `
                    <div class="hotel-card" data-hotel-id="${hotel.id}" 
                         onmouseover="highlightMarker(${index})" 
                         onmouseout="unhighlightMarker(${index})">
                        <div class="hotel-name">${hotel.name}</div>
                        <div class="hotel-details">üìç ${hotel.address}</div>
                        ${hotel.room_description ? `<div class="room-info">${hotel.room_description}</div>` : ''}
                        <div class="price-info">
                            <span class="price">${priceDisplay}</span>
                            <span class="rating">${stars} ${hotel.rating}/5</span>
                        </div>
                        ${nights > 1 ? `<div style="font-size: 0.8rem; color: #666; margin-bottom: 8px;">Total for ${nights} nights</div>` : ''}
                        <div class="hotel-actions">
                            <a href="${hotel.booking_url}" target="_blank" class="action-btn book-btn" 
                               onclick="trackBookingClick('${hotel.id}', '${hotel.name}', '${cityName}', '${hotel.room_type || 'double'}', '${hotel.price}')">
                                Book on Booking.com
                            </a>
                        </div>
                    </div>
                `;
            });

            hotelsList.innerHTML = html;
        }

        function trackBookingClick(hotelId, hotelName, city, roomType, price) {
            // Track booking button clicks for analytics
            trackEvent('booking_click', {
                hotel_id: hotelId,
                hotel_name: hotelName,
                city: city,
                room_type: roomType,
                price: price,
                nights: currentHotels.find(h => h.id == hotelId)?.nights || 1
            });

            // Also send to backend for partner analytics
            try {
                fetch(`${BACKEND_URL}/api/analytics/track-click`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        hotel_id: hotelId,
                        hotel_name: hotelName,
                        city: city,
                        room_type: roomType,
                        price: price,
                        session_id: sessionStorage.getItem('stayfindr_session_id'),
                        timestamp: new Date().toISOString()
                    })
                });
                console.log(`üìä Tracked booking click: ${hotelName} in ${city}`);
            } catch (error) {
                console.log('Analytics tracking failed:', error);
            }
        }

        function updateMap(hotels) {
            if (!map || typeof L === 'undefined') {
                console.log('Map not available, skipping update');
                return;
            }

            try {
                currentMarkers.forEach(marker => map.removeLayer(marker));
                currentMarkers = [];

                if (hotels.length > 0) {
                    const center = hotels[0].coordinates;
                    map.setView(center, 12);

                    hotels.forEach((hotel, index) => {
                        const marker = L.marker(hotel.coordinates)
                            .addTo(map)
                            .bindPopup(`
                                <b>${hotel.name}</b><br>
                                ${hotel.price !== 'N/A' ? `‚Ç¨${hotel.price}/stay` : 'Price on request'}<br>
                                ‚≠ê ${hotel.rating}/5
                                ${hotel.nights > 1 ? `<br><small>Total for ${hotel.nights} nights</small>` : ''}
                            `);

                        marker.on('click', () => {
                            highlightHotelCard(index);
                            // Track map interaction
                            trackEvent('map_marker_click', {
                                hotel_id: hotel.id,
                                hotel_name: hotel.name
                            });
                        });
                        currentMarkers.push(marker);
                    });
                }
            } catch (error) {
                console.error('Map update failed:', error);
            }
        }

        function highlightMarker(index) {
            if (currentMarkers[index] && typeof L !== 'undefined') {
                try {
                    currentMarkers[index].openPopup();
                } catch (error) {
                    console.log('Marker highlight failed:', error);
                }
            }
        }

        function unhighlightMarker(index) {
            if (currentMarkers[index] && typeof L !== 'undefined') {
                try {
                    currentMarkers[index].closePopup();
                } catch (error) {
                    console.log('Marker unhighlight failed:', error);
                }
            }
        }

        function highlightHotelCard(index) {
            document.querySelectorAll('.hotel-card').forEach(card => 
                card.classList.remove('highlighted'));

            const targetCard = document.querySelector(`[data-hotel-id="${currentHotels[index].id}"]`);
            if (targetCard) {
                targetCard.classList.add('highlighted');
                targetCard.scrollIntoView({behavior: 'smooth', block: 'center'});
            }
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', async function() {
            console.log('üìÑ Page loaded, initializing STAYFINDR...');
            
            // Try multiple loading strategies
            await loadLeafletDynamically();
            await waitForLeaflet();
            initializeApp();
        });
    </script>
</body>
</html>
